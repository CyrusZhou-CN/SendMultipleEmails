<ContentControl x:Class="SendMultipleEmails.Pages.LogView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SendMultipleEmails.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBlock Visibility="{Binding NoneLog}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16">无日志</TextBlock>
        <TextBlock Visibility="{Binding ShowLog}" Text="{Binding Logs}" TextWrapping="Wrap" Padding="10" Margin="10"
                 TextBlock.LineHeight="25" TextBlock.LineStackingStrategy="BlockLineHeight" />
    </Grid>
</ContentControl>
